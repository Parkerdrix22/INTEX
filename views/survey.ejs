                        hideBtn.classList.add('show-btn');
                        hideBtn.onclick = function(e) {
                            e.stopPropagation();
                            showEvent(eventId);
                        };
                    }
                    <% } %>
                }
            });
            
            // Load persisted questions (applies to all users)
            if (persistedQuestions) {
                eventQuestions = persistedQuestions;
            }
        });
