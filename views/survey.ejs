        // Load persisted data from localStorage
        function loadPersistedData() {
            const hiddenEventsData = localStorage.getItem('surveyHiddenEvents');
            if (hiddenEventsData) {
                const data = JSON.parse(hiddenEventsData);
                // Convert string IDs to numbers
                return data.map(id => String(id));
            }
            return [];
        }

        function loadPersistedQuestions() {
            const questionsData = localStorage.getItem('surveyEventQuestions');
            if (questionsData) {
                return JSON.parse(questionsData);
            }
            return null;
        }

        function savePersistedData(hiddenEvents) {
            localStorage.setItem('surveyHiddenEvents', JSON.stringify(Array.from(hiddenEvents)));
        }

        function savePersistedQuestions(questions) {
            localStorage.setItem('surveyEventQuestions', JSON.stringify(questions));
