    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Default survey questions (standard for all events)
        const defaultQuestions = [
            { type: 'rating', label: 'How satisfied were you with this event? (1-5)', name: 'satisfactionScore', required: true },
            { type: 'rating', label: 'How useful was this event? (1-5)', name: 'usefulnessScore', required: true },
            { type: 'rating', label: 'How would you rate the instructor(s)? (1-5)', name: 'instructorScore', required: true },
            { type: 'rating', label: 'How likely are you to recommend this event to others? (1-5)', name: 'recommendationScore', required: true },
            { type: 'textarea', label: 'Additional Comments', name: 'comments', required: false }
        ];

        // Store occurrences data from server
        const occurrencesByEvent = <%- JSON.stringify(occurrencesByEvent || {}) %>;
        
        function formatDateTime(dateTimeString) {
            if (!dateTimeString) return '';
            const date = new Date(dateTimeString);
            return date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: 'numeric',
                minute: '2-digit'
            });
        }
        
        function openSurvey(eventName, eventId, eventOccurrenceId) {
            // Use provided parameters or get from DOM
            if (!eventId) {
                const eventItem = document.querySelector(`[data-event-name="${eventName}"]`);
                eventId = eventItem ? eventItem.getAttribute('data-event-id') : null;
                eventOccurrenceId = eventItem ? eventItem.getAttribute('data-event-occurrence-id') : null;
            }
            
            // Get occurrences for this event
            const occurrences = occurrencesByEvent[eventId] || [];
            
            // Build survey form dynamically using default questions
            const questions = defaultQuestions;
            const formContainer = document.getElementById('surveyFormContainer');
            
            let formHTML = `
                <form id="surveyForm" action="/survey" method="POST">
                    <input type="hidden" id="eventName" name="eventName" value="${eventName}">
                    <input type="hidden" id="eventId" name="eventId" value="${eventId || ''}">
            `;
            
            // Only show dropdown if there are 2 or more occurrences
            if (occurrences.length > 1) {
                formHTML += `
                    <div class="form-group">
                        <label for="eventOccurrenceSelect" class="form-label">Select Event Occurrence <span style="color: red;">*</span></label>
                        <select id="eventOccurrenceSelect" name="eventoccurrenceid" class="form-control select-dropdown" required>
                            <option value="">-- Select an occurrence --</option>
                `;
                
                // Add occurrence options to dropdown
                occurrences.forEach(occ => {
                    const formattedDate = formatDateTime(occ.eventdatetimestart);
                    const selected = (occ.eventoccurrenceid == eventOccurrenceId) ? 'selected' : '';
                    formHTML += `<option value="${occ.eventoccurrenceid}" ${selected}>${formattedDate}</option>`;
                });
                
                formHTML += `
                        </select>
                    </div>
                `;
            } else {
                // If 1 or less occurrences, use a hidden field with the single occurrence ID
                if (occurrences.length === 1) {
                    formHTML += `
                        <input type="hidden" id="eventoccurrenceid" name="eventoccurrenceid" value="${occurrences[0].eventoccurrenceid}">
                    `;
                } else {
                    formHTML += `
                        <input type="hidden" id="eventoccurrenceid" name="eventoccurrenceid" value="">
                    `;
                }
            }
            
            formHTML += `
                    <div class="form-group">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>
            `;
            
            questions.forEach((q, index) => {
                if (q.type === 'rating') {
                    formHTML += `
                        <div class="form-group">
                            <label class="form-label">${q.label}</label>
                            <div class="rating-group">
                    `;
                    for (let i = 1; i <= 5; i++) {
                        const uniqueId = `${q.name}_${eventId}_${index}_${i}`;
                        formHTML += `
                            <div class="rating-option">
                                <input type="radio" id="${uniqueId}" name="${q.name}" value="${i}" ${q.required ? 'required' : ''}>
                                <label for="${uniqueId}">${i}</label>
                            </div>
                        `;
                    }
                    formHTML += `
                            </div>
                        </div>
                    `;
                } else if (q.type === 'textarea') {
                    formHTML += `
                        <div class="form-group">
                            <label for="${q.name}_${eventId}" class="form-label">${q.label}</label>
                            <textarea id="${q.name}_${eventId}" name="${q.name}" class="form-control" rows="4" ${q.required ? 'required' : ''}></textarea>
                        </div>
                    `;
                } else if (q.type === 'text') {
                    formHTML += `
                        <div class="form-group">
                            <label for="${q.name}_${eventId}" class="form-label">${q.label}</label>
                            <input type="text" id="${q.name}_${eventId}" name="${q.name}" class="form-control" ${q.required ? 'required' : ''}>
                        </div>
                    `;
                }
            });
            
            formHTML += `
                    <button type="submit" class="btn-submit">Submit Feedback</button>
                </form>
            `;
            
            formContainer.innerHTML = formHTML;
            document.getElementById('eventNameTitle').textContent = eventName;
            
            const modal = new bootstrap.Modal(document.getElementById('surveyModal'));
            modal.show();
        }

    </script>
