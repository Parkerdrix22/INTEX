        function openSurvey(eventName) {
            // Get event ID from the clicked event
            const eventItem = document.querySelector(`[data-event-name="${eventName}"]`);
            const eventId = eventItem ? eventItem.getAttribute('data-event-id') : null;
            
            // Build survey form dynamically based on event questions
            const questions = eventQuestions[eventId] || eventQuestions[1];
            const formContainer = document.getElementById('surveyFormContainer');
            
            let formHTML = `
                <form id="surveyForm" action="/surveys" method="POST">
                    <input type="hidden" id="eventName" name="eventName" value="${eventName}">
                    <input type="hidden" id="eventId" name="eventId" value="${eventId || ''}">
                    
                    <div class="form-group">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>
            `;
            
            questions.forEach((q, index) => {
                if (q.type === 'rating') {
                    formHTML += `
                        <div class="form-group">
                            <label class="form-label">${q.label}</label>
                            <div class="rating-group">
                    `;
                    for (let i = 1; i <= 5; i++) {
                        const uniqueId = `${q.name}_${eventId}_${index}_${i}`;
                        formHTML += `
                            <div class="rating-option">
                                <input type="radio" id="${uniqueId}" name="${q.name}" value="${i}" ${q.required ? 'required' : ''}>
                                <label for="${uniqueId}">${i}</label>
                            </div>
                        `;
                    }
                    formHTML += `
                            </div>
                        </div>
                    `;
                } else if (q.type === 'textarea') {
                    formHTML += `
                        <div class="form-group">
                            <label for="${q.name}_${eventId}" class="form-label">${q.label}</label>
                            <textarea id="${q.name}_${eventId}" name="${q.name}" class="form-control" rows="4" ${q.required ? 'required' : ''}></textarea>
                        </div>
                    `;
                } else if (q.type === 'text') {
                    formHTML += `
                        <div class="form-group">
                            <label for="${q.name}_${eventId}" class="form-label">${q.label}</label>
                            <input type="text" id="${q.name}_${eventId}" name="${q.name}" class="form-control" ${q.required ? 'required' : ''}>
                        </div>
                    `;
                }
            });
            
            formHTML += `
                    <button type="submit" class="btn-submit">Submit Feedback</button>
                </form>
            `;
            
            formContainer.innerHTML = formHTML;
            document.getElementById('eventNameTitle').textContent = eventName;
            
            const modal = new bootstrap.Modal(document.getElementById('surveyModal'));
            modal.show();
        }

        // Manager Functions
        function hideEvent(eventId) {
            const eventItem = document.querySelector(`[data-event-id="${eventId}"]`);
            if (eventItem) {
                hiddenEvents.add(eventId);
                eventItem.classList.add('hidden');
                eventItem.style.display = 'none';
                savePersistedData(hiddenEvents);
                
                const hideBtn = eventItem.querySelector('.hide-btn');
                if (hideBtn) {
                    hideBtn.textContent = 'Show';
                    hideBtn.classList.remove('hide-btn');
                    hideBtn.classList.add('show-btn');
                    hideBtn.onclick = function(e) {
                        e.stopPropagation();
                        showEvent(eventId);
                    };
                }
            }
        }

        function showEvent(eventId) {
            const eventItem = document.querySelector(`[data-event-id="${eventId}"]`);
            if (eventItem) {
                hiddenEvents.delete(eventId);
                eventItem.classList.remove('hidden');
                if (!showingHidden) {
                    eventItem.style.display = 'block';
                }
                savePersistedData(hiddenEvents);
                
                const showBtn = eventItem.querySelector('.show-btn');
                if (showBtn) {
                    showBtn.textContent = 'Hide';
                    showBtn.classList.remove('show-btn');
                    showBtn.classList.add('hide-btn');
                    showBtn.onclick = function(e) {
                        e.stopPropagation();
                        hideEvent(eventId);
                    };
                }
            }
        }

        function toggleHiddenEvents() {
            showingHidden = !showingHidden;
            const btn = document.getElementById('toggleHiddenBtn');
            const hiddenItems = document.querySelectorAll('.event-item.hidden');
            
            if (showingHidden) {
                btn.textContent = 'Hide Hidden Events';
                hiddenItems.forEach(item => {
                    item.style.display = 'block';
                });
            } else {
                btn.textContent = 'Show Hidden Events';
                hiddenItems.forEach(item => {
                    item.style.display = 'none';
                });
            }
        }

        function openEditQuestionsModal(eventName, eventId) {
            document.getElementById('editQuestionsModalTitle').textContent = `Edit Questions: ${eventName}`;
            document.getElementById('editEventId').value = eventId;
            document.getElementById('editEventName').value = eventName;
            
            const questions = eventQuestions[eventId] || [];
            const container = document.getElementById('questionsContainer');
            container.innerHTML = '';
            
            questions.forEach((q, index) => {
                addQuestionToEditor(container, q, index);
            });
            
            const modal = new bootstrap.Modal(document.getElementById('editQuestionsModal'));
            modal.show();
        }


        function addQuestion() {
            const container = document.getElementById('questionsContainer');
            const index = container.children.length;
            addQuestionToEditor(container, { type: 'rating', label: '', name: '', required: false }, index);
        }

        function addQuestionToEditor(container, question, index) {
            const questionDiv = document.createElement('div');
            questionDiv.className = 'question-item mb-3 p-3 border rounded';
            questionDiv.innerHTML = `
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <h5 class="mb-0">Question ${index + 1}</h5>
                    <button type="button" class="btn btn-sm btn-danger" onclick="removeQuestion(this)">Remove</button>
                </div>
                <div class="mb-2">
                    <label class="form-label">Question Type</label>
                    <select class="form-select question-type" onchange="updateQuestionType(this)">
                        <option value="rating" ${question.type === 'rating' ? 'selected' : ''}>Rating (1-5)</option>
                        <option value="text" ${question.type === 'text' ? 'selected' : ''}>Text Input</option>
                        <option value="textarea" ${question.type === 'textarea' ? 'selected' : ''}>Text Area</option>
                    </select>
                </div>
                <div class="mb-2">
                    <label class="form-label">Question Label</label>
                    <input type="text" class="form-control question-label" value="${question.label || ''}" placeholder="Enter question text">
                </div>
                <div class="mb-2">
                    <label class="form-label">Field Name</label>
                    <input type="text" class="form-control question-name" value="${question.name || ''}" placeholder="e.g., satisfactionScore">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input question-required" ${question.required ? 'checked' : ''}>
                    <label class="form-check-label">Required</label>
                </div>
            `;
            container.appendChild(questionDiv);
        }

        function removeQuestion(btn) {
            btn.closest('.question-item').remove();
        }

        function updateQuestionType(select) {
            // Could add logic to update question display based on type
        }

        function saveQuestions(event) {
            event.preventDefault();
            const eventId = document.getElementById('editEventId').value;
            const eventName = document.getElementById('editEventName').value;
            const container = document.getElementById('questionsContainer');
            const questions = [];
            
            container.querySelectorAll('.question-item').forEach(item => {
                const type = item.querySelector('.question-type').value;
                const label = item.querySelector('.question-label').value;
                const name = item.querySelector('.question-name').value;
                const required = item.querySelector('.question-required').checked;
                
                if (label && name) {
                    questions.push({ type, label, name, required });
                }
            });
            
            eventQuestions[eventId] = questions;
            savePersistedQuestions(eventQuestions);
            alert(`Questions saved for ${eventName}! These changes will be visible to all users.`);
            
            const modal = bootstrap.Modal.getInstance(document.getElementById('editQuestionsModal'));
            modal.hide();
        }

        // Apply hidden events on page load for all users
        document.addEventListener('DOMContentLoaded', function() {
            // Hide events that are in the hiddenEvents set (applies to all users)
            hiddenEvents.forEach(eventId => {
                const eventItem = document.querySelector(`[data-event-id="${eventId}"]`);
                if (eventItem) {
                    eventItem.classList.add('hidden');
                    eventItem.style.display = 'none';
                    
