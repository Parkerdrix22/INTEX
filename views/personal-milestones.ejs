        // Add milestone
        async function addMilestone(event) {
            event.preventDefault();
            const selectedMilestone = document.getElementById('milestoneSelect').value;
            const customMilestone = document.getElementById('customMilestone').value.trim();
            const milestoneDate = document.getElementById('milestoneDate').value;

            // Use custom milestone if provided, otherwise use selected milestone
            const milestoneName = customMilestone || selectedMilestone;

            if (!milestoneName || !milestoneDate) {
                alert('Please select a milestone or enter a custom milestone, and select a date.');
                return;
            }

            if (!participantId) {
                alert('Cannot assign milestone: No participant selected or user not found.');
                return;
            }

            try {
                console.log('Adding milestone with date:', milestoneDate);
                console.log('Date type:', typeof milestoneDate);
                console.log('Date value:', milestoneDate);
                
                const response = await fetch('/api/milestones', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        participant_id: participantId,
                        milestone_name: milestoneName,
                        date_achieved: milestoneDate
                    })
                });

                const result = await response.json();

                if (result.success) {
                    const newMilestone = {
                        participant_id: participantId,
                        name: milestoneName,
                        date: milestoneDate
                    };

                    milestones.push(newMilestone);

                    // Reset form
                    document.getElementById('addMilestoneForm').reset();

                    // Update display
                    updateYearDisplay();

                    alert('Milestone added successfully!');
                } else {
                    alert('Error assigning milestone: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error assigning milestone:', error);
                alert('Error assigning milestone. Please try again.');
            }
        }

        // Update milestones list
        function updateMilestonesList() {
            const listContainer = document.getElementById('milestonesList');
            const isManager = <%= user && user.isManager ? 'true' : 'false' %>;

            if (milestones.length === 0) {
                listContainer.innerHTML = '<div class="no-milestones">No milestones added yet.</div>';
                return;
            }

            // Sort by date (newest first)
            const sortedMilestones = [...milestones].sort((a, b) => new Date(b.date) - new Date(a.date));

            listContainer.innerHTML = sortedMilestones.map(m => {
                const date = new Date(m.date);
                const formattedDate = `${fullMonths[date.getMonth()]} ${date.getDate()}, ${date.getFullYear()}`;
                const actionsHTML = isManager ? `
                    <div class="milestone-list-actions">
                        <button class="milestone-action-btn edit-btn" onclick="editMilestone('${m.participant_id}', '${m.name.replace(/'/g, "\\'")}', '${m.date}', '${m.date}')" title="Edit milestone">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"/>
                            </svg>
                        </button>
                        <button class="milestone-action-btn delete-btn" onclick="deleteMilestone('${m.participant_id}', '${m.name.replace(/'/g, "\\'")}', '${m.date}')" title="Delete milestone">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/>
                            </svg>
                        </button>
                    </div>
                ` : '';
                return `
                    <div class="milestone-list-item">
                        <div style="flex: 1;">
                            <div class="milestone-list-name">${m.name}</div>
                            <div class="milestone-list-date">${formattedDate}</div>
                        </div>
                        ${actionsHTML}
                    </div>
                `;
            }).join('');
        }

        // Edit milestone
        async function editMilestone(participantId, currentName, currentDate, currentDateForPrompt) {
            const newName = prompt('Enter new milestone name:', currentName);
            if (!newName || newName.trim() === '') {
                return;
            }

            const dateForPrompt = currentDateForPrompt ? currentDateForPrompt.split('T')[0] : currentDate.split('T')[0];
            const newDate = prompt('Enter new date (YYYY-MM-DD):', dateForPrompt);
            if (!newDate) {
                return;
            }

            try {
                const response = await fetch(`/api/milestones`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        participant_id: participantId,
                        old_milestone_name: currentName,
                        old_date_achieved: currentDate,
                        milestone_name: newName.trim(),
                        date_achieved: newDate
                    })
                });

                const result = await response.json();

                if (result.success) {
                    alert('Milestone updated successfully!');
                    window.location.reload();
                } else {
                    alert('Error updating milestone: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error updating milestone:', error);
                alert('Error updating milestone. Please try again.');
            }
        }

        // Delete milestone
        async function deleteMilestone(participantId, milestoneName, milestoneDate) {
            if (!confirm(`Are you sure you want to delete "${milestoneName}"?`)) {
                return;
            }

            try {
                const response = await fetch(`/api/milestones`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        participant_id: participantId,
                        milestone_name: milestoneName,
                        date_achieved: milestoneDate
                    })
                });

                const result = await response.json();

                if (result.success) {
                    alert('Milestone deleted successfully!');
                    window.location.reload();
                } else {
                    alert('Error deleting milestone: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error deleting milestone:', error);
                alert('Error deleting milestone. Please try again.');
            }
        }

        // Update event attendance progress bar and stars
        function updateEventAttendance() {
            if (!participantId) return;
            
            const progressBarFill = document.getElementById('progressBarFill');
            const progressLabel = document.getElementById('progressLabel');
            const attendanceInfo = document.getElementById('attendanceInfo');
            const star1 = document.getElementById('star1');
            const star2 = document.getElementById('star2');
            const star3 = document.getElementById('star3');
            
            if (!progressBarFill || !progressLabel || !attendanceInfo) return;
            
            let maxGoal = 3;
            let starsEarned = 0;
            let percentage = 0;
            
            if (attendanceCount >= 10) {
                maxGoal = 10;
                starsEarned = 3;
                percentage = 100;
            } else if (attendanceCount >= 5) {
                maxGoal = 10;
                starsEarned = 2;
                percentage = (attendanceCount / 10) * 100;
            } else if (attendanceCount >= 3) {
                maxGoal = 5;
                starsEarned = 1;
                percentage = (attendanceCount / 5) * 100;
            } else {
                maxGoal = 3;
                starsEarned = 0;
                percentage = (attendanceCount / 3) * 100;
            }
            
            // Update progress bar
            progressBarFill.style.width = percentage + '%';
            progressLabel.textContent = `${attendanceCount} / ${maxGoal}`;
            
            // Update stars
            if (star1) star1.classList.toggle('active', starsEarned >= 1);
            if (star2) star2.classList.toggle('active', starsEarned >= 2);
            if (star3) star3.classList.toggle('active', starsEarned >= 3);
            
            // Update info text
            if (attendanceCount === 0) {
                attendanceInfo.textContent = 'Keep attending events to earn stars!';
            } else if (attendanceCount < 3) {
                attendanceInfo.textContent = `You've attended ${attendanceCount} event${attendanceCount !== 1 ? 's' : ''}. ${3 - attendanceCount} more to earn your first star!`;
            } else if (attendanceCount < 5) {
                attendanceInfo.textContent = `Great job! You've earned 1 star. ${5 - attendanceCount} more event${5 - attendanceCount !== 1 ? 's' : ''} to earn your second star!`;
            } else if (attendanceCount < 10) {
                attendanceInfo.textContent = `Amazing! You've earned 2 stars. ${10 - attendanceCount} more event${10 - attendanceCount !== 1 ? 's' : ''} to earn your third star!`;
            } else {
                attendanceInfo.textContent = 'Outstanding! You\'ve reached the maximum goal and earned all 3 stars!';
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function () {
            updateYearDisplay();
            updateEventAttendance();

            // Clear custom input when dropdown is selected and vice versa
            const milestoneSelect = document.getElementById('milestoneSelect');
            const customMilestone = document.getElementById('customMilestone');

            if (milestoneSelect && customMilestone) {
                milestoneSelect.addEventListener('change', function () {
                    if (this.value) {
                        customMilestone.value = '';
                    }
                });

                customMilestone.addEventListener('input', function () {
                    if (this.value.trim()) {
                        milestoneSelect.value = '';
                    }
                });
            }
        });
    </script>
