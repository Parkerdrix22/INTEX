    <script>
        // Store participant info
        const participantId = <%= participant && participant.id ? participant.id : 'null' %>;
        const participantEmail = '<%= participantEmail %>';
        const participantName = '<%= participantName %>';
        const attendanceCount = <%= typeof attendanceCount !== 'undefined' ? attendanceCount : 0 %>;

        // Current year
        let currentYear = new Date().getFullYear();

        // Map server format to frontend format
        let milestonesData = JSON.parse('<%- milestonesJson %>');
        let milestones = milestonesData.map(m => ({
            participant_id: m.participant_id,
            name: m.milestone_name,
            date: m.date_achieved
        }));

        // Month names
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
        const fullMonths = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];

        // Generate timeline months
        function generateTimeline() {
            const timelineContainer = document.getElementById('timelineMonths');
            const milestonesContainer = document.getElementById('milestonesContainer');

            // Clear containers
            timelineContainer.innerHTML = '';
            milestonesContainer.innerHTML = '';

            // Get all milestones for current year, sorted by date
            const yearMilestones = milestones.filter(m => {
                const milestoneDate = new Date(m.date);
                return milestoneDate.getFullYear() === currentYear;
            }).sort((a, b) => new Date(a.date) - new Date(b.date));

            // Group milestones by month
            const milestonesByMonth = {};
            yearMilestones.forEach(m => {
                const milestoneDate = new Date(m.date);
                const month = milestoneDate.getMonth();
                if (!milestonesByMonth[month]) {
                    milestonesByMonth[month] = [];
                }
                milestonesByMonth[month].push(m);
            });

            // Find the maximum number of milestones in any month to calculate padding
            let maxMilestonesInMonth = 0;
            Object.keys(milestonesByMonth).forEach(month => {
                if (milestonesByMonth[month].length > maxMilestonesInMonth) {
                    maxMilestonesInMonth = milestonesByMonth[month].length;
                }
            });

            // Calculate dynamic padding based on max milestones (120px base + 60px per additional milestone)
            const basePadding = 120;
            const additionalPadding = (maxMilestonesInMonth - 1) * 60;
            const totalPadding = basePadding + additionalPadding;

            // Update wrapper padding dynamically
            const timelineWrapper = document.querySelector('.timeline-wrapper');
            if (timelineWrapper) {
                timelineWrapper.style.paddingTop = `${totalPadding}px`;
                timelineWrapper.style.paddingBottom = `${totalPadding}px`;
            }

            // Generate month boxes
            months.forEach((month, index) => {
                const monthBox = document.createElement('div');
                monthBox.className = `month-box ${index % 2 === 0 ? 'white' : 'pink'}`;
                monthBox.textContent = month;
                monthBox.setAttribute('data-month', index);
                monthBox.setAttribute('data-year', currentYear);
                timelineContainer.appendChild(monthBox);
            });

            // Wait for layout to calculate positions
            setTimeout(() => {
                const monthBoxes = timelineContainer.querySelectorAll('.month-box');
                if (monthBoxes.length === 0) return;

                const gap = 8; // 0.5rem = 8px
                const timelineRect = timelineContainer.getBoundingClientRect();
                const wrapperRect = timelineContainer.parentElement.getBoundingClientRect();
                const containerLeft = timelineRect.left - wrapperRect.left;

                // Generate milestone markers - alternate by month
                Object.keys(milestonesByMonth).forEach(monthIndex => {
                    const monthMilestones = milestonesByMonth[monthIndex];
                    const monthBox = monthBoxes[parseInt(monthIndex)];

                    if (!monthBox) return;

                    // Get the month box position relative to the timeline container
                    const monthBoxRect = monthBox.getBoundingClientRect();
                    const monthBoxLeft = monthBoxRect.left - timelineRect.left;
                    const monthBoxCenter = monthBoxLeft + (monthBoxRect.width / 2);

                    // Alternate by month: even months (0,2,4...) = top, odd months (1,3,5...) = bottom
                    const isTop = parseInt(monthIndex) % 2 === 0;

                    // Create a single marker container for all milestones in this month
                    // They share the same box and line
                    const marker = document.createElement('div');
                    marker.className = `milestone-marker ${isTop ? 'top' : 'bottom'}`;
                    marker.style.left = `${containerLeft + monthBoxCenter}px`;

                    // Position the marker at the timeline level
                    if (isTop) {
                        marker.style.top = `${totalPadding}px`;
                    } else {
                        marker.style.bottom = `${totalPadding}px`;
                    }

                    // Create a box that contains all milestone labels for this month
                    const milestoneBox = document.createElement('div');
                    milestoneBox.className = 'milestone-box';

                    // Add all milestone labels to the box
                    monthMilestones.forEach((milestone, idx) => {
                        const label = document.createElement('div');
                        label.className = 'milestone-label';
                        label.textContent = milestone.name;
                        milestoneBox.appendChild(label);
                    });

                    marker.appendChild(milestoneBox);
                    milestonesContainer.appendChild(marker);
                });
            }, 100);
        }

        // Update year display
