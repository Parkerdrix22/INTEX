<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Milestones - Ella Rises</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts - DM Serif Display -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&display=swap" rel="stylesheet">
    <style>
        :root {
            --er-pink: #ffeef5;
            --er-pink-dark: #ff9fc4;
            --er-text: #222222;
        }

        body {
            background-color: #ffffff;
            color: var(--er-text);
        }

        /* DM Serif Display for all titles and headers */
        h1, h2, h3, h4, h5, h6,
        .navbar-brand {
            font-family: 'DM Serif Display', serif;
        }

        /* Light pink navbar */
        .navbar {
            background-color: var(--er-pink) !important;
            padding: 1.2rem 0;
            min-height: 70px;
        }

        .navbar .container {
            padding-left: 1rem;
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 0.06em;
            text-transform: uppercase;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-left: 0 !important;
            padding-left: 0 !important;
        }

        .navbar-brand img {
            height: 60px;
            width: auto;
        }

        .nav-link {
            font-weight: 500;
            margin: 0 0.75rem;
        }

        .nav-link.sign-in-link {
            margin-left: 2rem;
            padding-left: 1.5rem;
            border-left: 2px solid rgba(0, 0, 0, 0.1);
        }

        /* Page Header */
        .page-header {
            background-color: var(--er-pink);
            padding: 3rem 2rem;
            text-align: center;
            margin-bottom: 3rem;
        }

        .page-header h1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--er-text);
            margin-bottom: 1rem;
        }

        .page-header p {
            font-size: 1.1rem;
            color: #666;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Search and Filter Section */
        .search-filter-section {
            max-width: 1200px;
            margin: 0 auto 2rem;
            padding: 0 2rem;
        }

        .search-filter-container {
            background-color: #fff;
            border-radius: 0.75rem;
            padding: 2rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .search-filter-row {
            display: flex;
            gap: 1.5rem;
            align-items: flex-end;
            flex-wrap: wrap;
        }

        .form-group {
            flex: 1;
            min-width: 250px;
        }

        .form-group label {
            font-weight: 600;
            color: var(--er-text);
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-control,
        .form-select {
            border: 2px solid #e0e0e0;
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: var(--er-pink-dark);
            outline: none;
            box-shadow: 0 0 0 0.2rem rgba(255, 159, 196, 0.25);
        }

        .btn-assign {
            background-color: var(--er-pink-dark);
            border: none;
            border-radius: 0.5rem;
            padding: 0.75rem 2rem;
            font-weight: 600;
            color: #fff;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

        .btn-assign:hover {
            background-color: #ff8ab8;
        }

        /* Results Section */
        .results-section {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem 4rem;
        }

        .participant-results {
            background-color: #fff;
            border-radius: 0.75rem;
            padding: 2rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .participant-item {
            padding: 1rem;
            border-bottom: 1px solid #e0e0e0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .participant-item:last-child {
            border-bottom: none;
        }

        .participant-item:hover {
            background-color: var(--er-pink);
            transform: translateX(5px);
        }

        .participant-info {
            flex: 1;
        }

        .participant-name {
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 0.25rem;
        }

        .participant-email {
            color: #666;
            font-size: 0.9rem;
        }

        .no-results {
            text-align: center;
            padding: 3rem;
            color: #999;
            font-style: italic;
        }

        /* Footer */
        footer {
            background-color: var(--er-pink);
            padding: 3rem 1rem 2rem;
            margin-top: 4rem;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2rem;
        }

        .footer-section {
            margin-bottom: 2rem;
        }

        .footer-section h4 {
            font-weight: 700;
            font-size: 1.1rem;
            margin-bottom: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .footer-section p,
        .footer-section a {
            color: var(--er-text);
            text-decoration: none;
            font-size: 0.95rem;
            line-height: 1.6;
        }

        .footer-section a:hover {
            color: var(--er-pink-dark);
        }

        .footer-logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .footer-logo img {
            height: 40px;
            width: auto;
        }

        .footer-logo span {
            font-weight: 700;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            font-size: 1.2rem;
        }

        .footer-bottom {
            text-align: center;
            padding-top: 2rem;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
            margin-top: 2rem;
            color: #666;
            font-size: 0.9rem;
        }

        @media (max-width: 768px) {
            .footer-grid {
                grid-template-columns: 1fr;
            }

            .page-header h1 {
                font-size: 2rem;
            }

            .search-filter-section,
            .results-section {
                padding: 0 1rem 3rem;
            }

            .search-filter-row {
                flex-direction: column;
            }

            .form-group {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- Light pink navbar with links -->
    <nav class="navbar navbar-expand-md navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/images/ella_logo.avif" alt="Ella Rises Logo">
                <span>Ella Rises</span>
            </a>
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navContent"
                aria-controls="navContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navContent">
                <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                    <% if (user && user.isManager) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/participants">Participants</a>
                    </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/survey">Event Feedback</a>
                    </li>
                    <% if (user && user.isUser) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/my-journey">My Journey | Mi Camino</a>
                    </li>
                    <% } %>
                    <% if (user && user.isManager) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/milestones">Milestones</a>
                    </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="https://givebutter.com/EllaRises" target="_blank">Donations</a>
                    </li>
                    <% if (user && user.isManager) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Dashboard</a>
                    </li>
                    <% } %>
                    <% if (!user) { %>
                    <li class="nav-item">
                        <a class="nav-link sign-in-link" href="/login">Sign In</a>
                    </li>
                    <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link sign-in-link" href="/logout">Logout</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Header -->
    <div class="page-header">
        <h1>Milestones</h1>
        <p>Assign milestones to participants to track their achievements and progress.</p>
    </div>

    <!-- Search and Filter Section -->
    <div class="search-filter-section">
        <div class="search-filter-container">
            <form id="milestoneForm" onsubmit="searchParticipants(event)">
                <div class="search-filter-row">
                    <div class="form-group">
                        <label for="participantSearch">Search Participant</label>
                        <input 
                            type="text" 
                            id="participantSearch" 
                            class="form-control" 
                            placeholder="Search by name or email..."
                            oninput="filterParticipants()">
                    </div>
                    <div class="form-group">
                        <label for="milestoneSelect">Milestone Description</label>
                        <select id="milestoneSelect" class="form-select" required>
                            <option value="">Select a milestone...</option>
                            <option value="AA in Art & Design">AA in Art & Design</option>
                            <option value="AAS in Drafting & Design">AAS in Drafting & Design</option>
                            <option value="BA in Studio Arts">BA in Studio Arts</option>
                            <option value="BS in Information Systems">BS in Information Systems</option>
                            <option value="BS in Mechanical Engineering">BS in Mechanical Engineering</option>
                            <option value="Camp Counselor">Camp Counselor</option>
                            <option value="Clinical Data Coordinator">Clinical Data Coordinator</option>
                            <option value="Competition Award">Competition Award</option>
                            <option value="Customer Support Rep">Customer Support Rep</option>
                            <option value="Data Analytics Certificate">Data Analytics Certificate</option>
                            <option value="Digital Illustration Certificate">Digital Illustration Certificate</option>
                            <option value="High School Diploma">High School Diploma</option>
                            <option value="Internship">Internship</option>
                            <option value="IT Help Desk Trainee">IT Help Desk Trainee</option>
                            <option value="Junior QA Tester">Junior QA Tester</option>
                            <option value="Lifeguard">Lifeguard</option>
                            <option value="MBA">MBA</option>
                            <option value="Mentorship Program">Mentorship Program</option>
                            <option value="Middle School Diploma">Middle School Diploma</option>
                            <option value="MFA in Studio Arts">MFA in Studio Arts</option>
                            <option value="Product Designer">Product Designer</option>
                            <option value="Published Project">Published Project</option>
                            <option value="Retail Assistant">Retail Assistant</option>
                            <option value="Studio Assistant">Studio Assistant</option>
                            <option value="Systems Analyst">Systems Analyst</option>
                            <option value="Web Development Certificate">Web Development Certificate</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-assign">Assign Milestone</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Section -->
    <div class="results-section">
        <div class="participant-results" id="participantResults">
            <!-- Participant list will be populated here -->
            <div class="participant-item">
                <div class="participant-info">
                    <div class="participant-name">Penelope Martinez</div>
                    <div class="participant-email">penelope.martinez4@studentmail.org</div>
                </div>
            </div>
            <div class="participant-item">
                <div class="participant-info">
                    <div class="participant-name">Natalie Torres</div>
                    <div class="participant-email">natalie.torres6@studentmail.org</div>
                </div>
            </div>
            <div class="participant-item">
                <div class="participant-info">
                    <div class="participant-name">Elizabeth Harris</div>
                    <div class="participant-email">elizabeth.harris7@learners.net</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-grid">
                <div class="footer-section">
                    <div class="footer-logo">
                        <img src="/images/ella_logo.avif" alt="Ella Rises Logo">
                        <span>Ella Rises</span>
                    </div>
                    <p>
                        Empowering the rising generation of women to pursue higher education 
                        and embrace their heritage through STEAM programs, mentoring, and 
                        leadership opportunities.
                    </p>
                </div>
                
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <p><a href="/events">Events</a></p>
                    <p><a href="/#surveys">Event Feedback</a></p>
                    <p><a href="/#donations">Donations</a></p>
                </div>
                
                <div class="footer-section">
                    <h4>Contact</h4>
                    <p>Visit us at:</p>
                    <p><a href="https://www.ellarises.org/" target="_blank">www.ellarises.org</a></p>
                    <p style="margin-top: 1rem;">
                        Partnerships with UVU and BYU
                    </p>
                </div>
            </div>
            
            <div class="footer-bottom">
                <p>&copy; 2025 Ella Rises. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Sample participant data (in production, this would come from the database)
        const participants = [
            { name: 'Penelope Martinez', email: 'penelope.martinez4@studentmail.org' },
            { name: 'Natalie Torres', email: 'natalie.torres6@studentmail.org' },
            { name: 'Elizabeth Harris', email: 'elizabeth.harris7@learners.net' }
        ];

        function filterParticipants() {
            const searchTerm = document.getElementById('participantSearch').value.toLowerCase();
            const resultsContainer = document.getElementById('participantResults');
            
            const filtered = participants.filter(p => 
                p.name.toLowerCase().includes(searchTerm) || 
                p.email.toLowerCase().includes(searchTerm)
            );

            if (filtered.length === 0) {
                resultsContainer.innerHTML = '<div class="no-results">No participants found matching your search.</div>';
                return;
            }

            resultsContainer.innerHTML = filtered.map(p => `
                <div class="participant-item" onclick="viewPersonalMilestones('${p.email}', '${p.name}')">
                    <div class="participant-info">
                        <div class="participant-name">${p.name}</div>
                        <div class="participant-email">${p.email}</div>
                    </div>
                </div>
            `).join('');
        }

        function searchParticipants(event) {
            event.preventDefault();
            const milestone = document.getElementById('milestoneSelect').value;
            const searchTerm = document.getElementById('participantSearch').value;
            
            if (!milestone) {
                alert('Please select a milestone.');
                return;
            }

            // In production, this would make an API call to assign the milestone
            alert(`Milestone "${milestone}" will be assigned to participants matching "${searchTerm}".\n\n(In production, this would save to the database.)`);
        }

        function viewPersonalMilestones(email, name) {
            // Navigate to personal milestones page
            window.location.href = `/personal-milestones?email=${encodeURIComponent(email)}&name=${encodeURIComponent(name)}`;
        }

        // Initialize with all participants
        filterParticipants();
    </script>
</body>
</html>

