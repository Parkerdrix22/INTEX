    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <script>
        // Chart instance for total milestones overview
        let totalMilestonesChart = null;

        // Load total milestones overview graph on page load
        async function loadTotalMilestonesOverview() {
            try {
                const response = await fetch('/api/milestones/overview/timeline');
                const data = await response.json();

                if (data.success && data.labels && data.labels.length > 0) {
                    const ctx = document.getElementById('totalMilestonesChart').getContext('2d');
                    totalMilestonesChart = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: data.labels,
                            datasets: [{
                                label: 'Total Milestones',
                                data: data.data,
                                borderColor: '#ff9fc4',
                                backgroundColor: 'rgba(255, 159, 196, 0.1)',
                                borderWidth: 3,
                                fill: true,
                                tension: 0.4,
                                pointRadius: 5,
                                pointHoverRadius: 7,
                                pointBackgroundColor: '#ff9fc4',
                                pointBorderColor: '#fff',
                                pointBorderWidth: 2
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: true,
                            plugins: {
                                legend: {
                                    display: true,
                                    position: 'top',
                                    labels: {
                                        font: {
                                            size: 14,
                                            weight: '600'
                                        },
                                        color: '#222222'
                                    }
                                },
                                tooltip: {
                                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                                    padding: 12,
                                    titleFont: {
                                        size: 14,
                                        weight: 'bold'
                                    },
                                    bodyFont: {
                                        size: 13
                                    },
                                    callbacks: {
                                        label: function(context) {
                                            return 'Total Milestones: ' + context.parsed.y;
                                        }
                                    }
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    ticks: {
                                        stepSize: 1,
                                        font: {
                                            size: 12
                                        },
                                        color: '#666'
                                    },
                                    grid: {
                                        color: 'rgba(0, 0, 0, 0.05)'
                                    }
                                },
                                x: {
                                    ticks: {
                                        font: {
                                            size: 12
                                        },
                                        color: '#666'
                                    },
                                    grid: {
                                        display: false
                                    }
                                }
                            }
                        }
                    });
                }
            } catch (error) {
                console.error('Error loading total milestones overview:', error);
            }
        }

        // Debounce function to limit API calls
        function debounce(func, wait) {
            let timeout;
            return function (...args) {
                clearTimeout(timeout);
                timeout = setTimeout(() => func.apply(this, args), wait);
            };
        }

        const filterParticipants = debounce(async () => {
            const searchTerm = document.getElementById('participantSearch').value.trim();
            const resultsContainer = document.getElementById('participantResults');
            const resultsSection = document.querySelector('.results-section');
            const statsSection = document.getElementById('milestone-stats');

            // Hide milestone stats when searching participants
            if (statsSection) {
                statsSection.style.display = 'none';
            }

            // Show results section when searching
            if (resultsSection) {
                resultsSection.style.display = 'block';
            }

            // Show total milestones overview when searching participants
            const totalOverview = document.getElementById('total-milestones-overview');
            if (totalOverview) {
                totalOverview.style.display = 'block';
            }

            if (searchTerm.length < 2) {
                resultsContainer.innerHTML = '<div class="no-results">Type at least 2 characters to search...</div>';
                return;
            }

            try {
                const response = await fetch(`/api/participants?search=${encodeURIComponent(searchTerm)}`);
                const participants = await response.json();

                if (participants.length === 0) {
                    resultsContainer.innerHTML = '<div class="no-results">No participants found matching your search.</div>';
                    return;
                }

                resultsContainer.innerHTML = participants.map(p => `
                    <div class="participant-item">
                        <div class="participant-info">
                            <div class="participant-name">${p.name}</div>
                            <div class="participant-email">${p.email}</div>
                        </div>
                        <button class="btn-see-milestones" onclick="selectParticipant(${p.id})">See Personal Milestones</button>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Error searching participants:', error);
                resultsContainer.innerHTML = '<div class="no-results text-danger">Error searching participants. Please try again.</div>';
            }
        }, 300);

        function selectParticipant(id) {
            window.location.href = `/personal-milestones?participantId=${id}`;
        }

        async function searchParticipants(event) {
            event.preventDefault();
            // Form submission disabled - milestone assignment is now done on personal milestones page
        }

        // Chart instance for milestone timeline
        let milestoneChart = null;

        // Handle "Show Totals" button click
        document.getElementById('showTotalsBtn').addEventListener('click', function() {
            const milestoneSelect = document.getElementById('milestoneSelect');
            milestoneSelect.value = '';
            milestoneSelect.dispatchEvent(new Event('change'));
        });

        // Handle "Show Totals" button click
        document.getElementById('showTotalsBtn').addEventListener('click', function() {
            const milestoneSelect = document.getElementById('milestoneSelect');
            milestoneSelect.value = '';
            milestoneSelect.dispatchEvent(new Event('change'));
        });

        // Handle milestone selection to show statistics
        document.getElementById('milestoneSelect').addEventListener('change', async function() {
            const milestoneName = this.value;
            const statsSection = document.getElementById('milestone-stats');
            const resultsSection = document.querySelector('.results-section');
            const participantSearch = document.getElementById('participantSearch');
            const showTotalsBtn = document.getElementById('showTotalsBtn');

            // Clear participant search when milestone is selected
            if (participantSearch && milestoneName) {
                participantSearch.value = '';
                const resultsContainer = document.getElementById('participantResults');
                if (resultsContainer) {
                    resultsContainer.innerHTML = '<div class="no-results">Start typing to search for participants...</div>';
                }
            }

            if (!milestoneName) {
                statsSection.style.display = 'none';
                // Destroy chart if it exists
                if (milestoneChart) {
                    milestoneChart.destroy();
                    milestoneChart = null;
                }
                // Show results section when no milestone is selected
                if (resultsSection) {
                    resultsSection.style.display = 'block';
                }
                // Show total milestones overview when no milestone is selected
                const totalOverview = document.getElementById('total-milestones-overview');
                if (totalOverview) {
                    totalOverview.style.display = 'block';
                }
                // Hide "Show Totals" button when no milestone is selected
                if (showTotalsBtn) {
                    showTotalsBtn.style.display = 'none';
                }
                return;
            }

            // Hide participant results when showing milestone stats
            if (resultsSection) {
                resultsSection.style.display = 'none';
            }

            // Show "Show Totals" button when a milestone is selected
            if (showTotalsBtn) {
                showTotalsBtn.style.display = 'block';
            }

            // Hide total milestones overview when a specific milestone is selected
            const totalOverview = document.getElementById('total-milestones-overview');
            if (totalOverview) {
                totalOverview.style.display = 'none';
            }

            try {
                const response = await fetch(`/api/milestones/stats/${encodeURIComponent(milestoneName)}`);
                const data = await response.json();

                if (data.success) {
                    // Update statistics
                    document.getElementById('stat-completed').textContent = data.completed;
                    document.getElementById('stat-percentage').textContent = data.percentage + '%';
                    statsSection.style.display = 'block';

                    // Fetch and display timeline data
                    try {
                        const timelineResponse = await fetch(`/api/milestones/timeline/${encodeURIComponent(milestoneName)}`);
                        const timelineData = await timelineResponse.json();

                        if (timelineData.success && timelineData.labels && timelineData.labels.length > 0) {
                            // Destroy existing chart if it exists
                            if (milestoneChart) {
                                milestoneChart.destroy();
                            }

                            const ctx = document.getElementById('milestoneTimelineChart').getContext('2d');
                            milestoneChart = new Chart(ctx, {
                                type: 'line',
                                data: {
                                    labels: timelineData.labels,
                                    datasets: [{
                                        label: 'Cumulative Completions',
                                        data: timelineData.data,
                                        borderColor: '#ff9fc4',
                                        backgroundColor: 'rgba(255, 159, 196, 0.1)',
                                        borderWidth: 3,
                                        fill: true,
                                        tension: 0.4,
                                        pointRadius: 5,
                                        pointHoverRadius: 7,
                                        pointBackgroundColor: '#ff9fc4',
                                        pointBorderColor: '#fff',
                                        pointBorderWidth: 2
                                    }]
                                },
                                options: {
                                    responsive: true,
                                    maintainAspectRatio: true,
                                    plugins: {
                                        legend: {
                                            display: true,
                                            position: 'top',
                                            labels: {
                                                font: {
                                                    size: 14,
                                                    weight: '600'
                                                },
                                                color: '#222222'
                                            }
                                        },
                                        tooltip: {
                                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                                            padding: 12,
                                            titleFont: {
                                                size: 14,
                                                weight: 'bold'
                                            },
                                            bodyFont: {
                                                size: 13
                                            },
                                            callbacks: {
                                                label: function(context) {
                                                    return 'Completions: ' + context.parsed.y;
                                                }
                                            }
                                        }
                                    },
                                    scales: {
                                        y: {
                                            beginAtZero: true,
                                            ticks: {
                                                stepSize: 1,
                                                font: {
                                                    size: 12
                                                },
                                                color: '#666'
                                            },
                                            grid: {
                                                color: 'rgba(0, 0, 0, 0.05)'
                                            }
                                        },
                                        x: {
                                            ticks: {
                                                font: {
                                                    size: 12
                                                },
                                                color: '#666'
                                            },
                                            grid: {
                                                display: false
                                            }
                                        }
                                    }
                                }
                            });
                        } else {
                            // No data to display
                            if (milestoneChart) {
                                milestoneChart.destroy();
                                milestoneChart = null;
                            }
                        }
                    } catch (timelineError) {
                        console.error('Error fetching timeline data:', timelineError);
                        if (milestoneChart) {
                            milestoneChart.destroy();
                            milestoneChart = null;
                        }
                    }
                } else {
                    console.error('Error fetching milestone statistics:', data.error);
                    statsSection.style.display = 'none';
                    // Show results section if stats failed
                    if (resultsSection) {
                        resultsSection.style.display = 'block';
                    }
                }
            } catch (error) {
                console.error('Error:', error);
                statsSection.style.display = 'none';
                // Show results section if error occurred
                if (resultsSection) {
                    resultsSection.style.display = 'block';
                }
            }
        });

        // Load overview graph on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadTotalMilestonesOverview();
        });
    </script>
