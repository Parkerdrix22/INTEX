    <script>
        // Sample participant data (in production, this would come from the database)
        const participants = [
            { name: 'Penelope Martinez', email: 'penelope.martinez4@studentmail.org' },
            { name: 'Natalie Torres', email: 'natalie.torres6@studentmail.org' },
            { name: 'Elizabeth Harris', email: 'elizabeth.harris7@learners.net' }
        ];

        function filterParticipants() {
            const searchTerm = document.getElementById('participantSearch').value.toLowerCase();
            const resultsContainer = document.getElementById('participantResults');
            
            const filtered = participants.filter(p => 
                p.name.toLowerCase().includes(searchTerm) || 
                p.email.toLowerCase().includes(searchTerm)
            );

            if (filtered.length === 0) {
                resultsContainer.innerHTML = '<div class="no-results">No participants found matching your search.</div>';
                return;
            }

            resultsContainer.innerHTML = filtered.map(p => `
                <div class="participant-item" onclick="viewPersonalMilestones('${p.email}', '${p.name}')">
                    <div class="participant-info">
                        <div class="participant-name">${p.name}</div>
                        <div class="participant-email">${p.email}</div>
                    </div>
                </div>
            `).join('');
        }

        function searchParticipants(event) {
            event.preventDefault();
            const milestone = document.getElementById('milestoneSelect').value;
            const searchTerm = document.getElementById('participantSearch').value;
            
            if (!milestone) {
                alert('Please select a milestone.');
                return;
            }

            // In production, this would make an API call to assign the milestone
            alert(`Milestone "${milestone}" will be assigned to participants matching "${searchTerm}".\n\n(In production, this would save to the database.)`);
        }

        function viewPersonalMilestones(email, name) {
            // Navigate to personal milestones page
            window.location.href = `/personal-milestones?email=${encodeURIComponent(email)}&name=${encodeURIComponent(name)}`;
        }

        // Initialize with all participants
        filterParticipants();
    </script>
