            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

            <script>
                // Handle check-in time updates
                document.querySelectorAll('.checkin-time').forEach(input => {
                    input.addEventListener('change', function () {
                        const participantId = this.getAttribute('data-participant-id');
                        const eventOccurrenceId = this.getAttribute('data-event-occurrence-id');
                        const timeValue = this.value;

                        if (!timeValue) {
                            return;
                        }

                        // Get today's date and combine with time
                        const today = new Date();
                        const [hours, minutes] = timeValue.split(':');
                        const checkInDateTime = new Date(today.getFullYear(), today.getMonth(), today.getDate(), parseInt(hours, 10), parseInt(minutes, 10), 0);

                        // Format as ISO string for database
                        const isoString = checkInDateTime.toISOString();

                        fetch('/api/registration/checkin', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                participantId: participantId,
                                eventOccurrenceId: eventOccurrenceId,
                                checkInTime: isoString
                            })
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    console.log('Check-in time updated successfully');
                                } else {
                                    console.error('Error updating check-in time:', data.error);
                                    alert('Error updating check-in time: ' + (data.error || 'Unknown error'));
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                alert('Error updating check-in time. Please try again.');
                            });
                    });
                });

                // Handle status updates
                document.querySelectorAll('input[type="radio"][name^="status-"]').forEach(radio => {
                    radio.addEventListener('change', function () {
                        const participantId = this.getAttribute('data-participant-id');
                        const eventOccurrenceId = this.getAttribute('data-event-occurrence-id');
                        const status = this.value;

                        fetch('/api/registration/status', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                participantId: participantId,
                                eventOccurrenceId: eventOccurrenceId,
                                status: status
                            })
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    console.log('Status updated successfully');
                                } else {
                                    console.error('Error updating status:', data.error);
                                    alert('Error updating status: ' + (data.error || 'Unknown error'));
                                    // Revert the radio button selection
                                    this.checked = false;
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                alert('Error updating status. Please try again.');
                                // Revert the radio button selection
                                this.checked = false;
                            });
                    });
                });

                // Handle past occurrence dropdown selection
                const pastOccurrenceSelect = document.getElementById('past-occurrence-select');
                const viewFutureBtn = document.getElementById('view-future-btn');
                const eventId = '<%= event ? event.eventid : "" %>';
                const initialRegistrations = <%- JSON.stringify(registrations || []) %>;
                const eventDetailsSection = document.querySelector('.event-details-section');

                if (pastOccurrenceSelect) {
                    pastOccurrenceSelect.addEventListener('change', function () {
                        const occurrenceId = this.value;

                        if (!occurrenceId) {
                            // Show future registrations
                            displayRegistrations(initialRegistrations, false);
                            viewFutureBtn.style.display = 'none';
                            document.getElementById('status-totals').style.display = 'none';
                            return;
                        }

                        // Fetch registrations for the selected past occurrence
                        fetch(`/api/reservations/${eventId}/occurrence/${occurrenceId}`)
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    // Update event details if occurrence data is available
                                    if (data.occurrence && eventDetailsSection) {
                                        updateEventDetails(data.occurrence);
                                    }
                                    displayRegistrations(data.registrations, true);
                                    viewFutureBtn.style.display = 'inline-block';
                                } else {
                                    console.error('Error fetching registrations:', data.error);
                                    alert('Error fetching registrations: ' + (data.error || 'Unknown error'));
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                alert('Error fetching registrations. Please try again.');
                            });
                    });
                }

                if (viewFutureBtn) {
                    viewFutureBtn.addEventListener('click', function () {
                        displayRegistrations(initialRegistrations, false);
                        pastOccurrenceSelect.value = '';
                        this.style.display = 'none';
                        document.getElementById('status-totals').style.display = 'none';
                        // Restore original event details
                        if (eventDetailsSection) {
                            restoreOriginalEventDetails();
                        }
                    });
                }

                function updateEventDetails(occurrence) {
                    const eventDetailsInfo = eventDetailsSection.querySelector('.event-details-info');
                    if (!eventDetailsInfo) return;

                    const dateTime = new Date(occurrence.eventdatetimestart);
                    const dateStr = dateTime.toLocaleDateString('en-US', {
                        weekday: 'long',
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    });
                    const timeStr = dateTime.toLocaleTimeString('en-US', {
                        hour: 'numeric',
                        minute: '2-digit'
                    });

                    let html = `
                <div class="event-detail-item">
                    <span class="event-detail-label">Date & Time:</span>
                    <span class="event-detail-value">${dateStr} at ${timeStr}</span>
                </div>
            `;

                    if (occurrence.eventlocation) {
                        html += `
                    <div class="event-detail-item">
                        <span class="event-detail-label">Location:</span>
                        <span class="event-detail-value">${occurrence.eventlocation}</span>
                    </div>
                `;
                    }

                    eventDetailsInfo.innerHTML = html;
                }

                function restoreOriginalEventDetails() {
                    const eventDetailsInfo = eventDetailsSection.querySelector('.event-details-info');
                    if (!eventDetailsInfo) return;

            <% if (firstFutureOccurrence) { %>
                const dateTime = new Date('<%= firstFutureOccurrence.eventdatetimestart %>');
                        const dateStr = dateTime.toLocaleDateString('en-US', {
                            weekday: 'long',
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric'
                        });
                        const timeStr = dateTime.toLocaleTimeString('en-US', {
                            hour: 'numeric',
                            minute: '2-digit'
                        });

                        let html = `
                    <div class="event-detail-item">
                        <span class="event-detail-label">Date & Time:</span>
                        <span class="event-detail-value">${dateStr} at ${timeStr}</span>
                    </div>
                `;
                
                <% if (firstFutureOccurrence.eventlocation) { %>
                            html += `
                        <div class="event-detail-item">
                            <span class="event-detail-label">Location:</span>
                            <span class="event-detail-value"><%= firstFutureOccurrence.eventlocation %></span>
                        </div>
                    `;
                <% } %>

                            eventDetailsInfo.innerHTML = html;
            <% } %>
        }

                function displayRegistrations(registrations, isPastOccurrence = false) {
                    const container = document.getElementById('registrations-container');
                    const statusTotals = document.getElementById('status-totals');

                    if (!registrations || registrations.length === 0) {
                        container.innerHTML = '<div class="alert alert-info" role="alert">No registrations found for this occurrence.</div>';
                        if (statusTotals) statusTotals.style.display = 'none';
                        return;
                    }

                    // Calculate status totals for past occurrences
                    if (isPastOccurrence && statusTotals) {
                        let attended = 0;
                        let noshow = 0;
                        let cancelled = 0;

                        registrations.forEach(r => {
                            const status = ((r.registrationstatus || '').trim()).toLowerCase();
                            if (status === 'attended') {
                                attended++;
                            } else if (status === 'no-show') {
                                noshow++;
                            } else if (status === 'cancelled') {
                                cancelled++;
                            }
                        });

                        document.getElementById('total-attended').textContent = attended;
                        document.getElementById('total-noshow').textContent = noshow;
                        document.getElementById('total-cancelled').textContent = cancelled;
                        statusTotals.style.display = 'block';
                    } else if (statusTotals) {
                        statusTotals.style.display = 'none';
                    }

                    let html = '<div class="participants-grid" id="participants-grid">';

                    registrations.forEach(registration => {
                        const uniqueId = registration.participantid + '-' + registration.eventoccurrenceid;

                        // Parse check-in time properly
                        let checkInTime = '';
                        if (registration.registrationcheckintime) {
                            try {
                                const date = new Date(registration.registrationcheckintime);
                                // Format as HH:MM for time input
                                const hours = String(date.getHours()).padStart(2, '0');
                                const minutes = String(date.getMinutes()).padStart(2, '0');
                                checkInTime = `${hours}:${minutes}`;
                            } catch (e) {
                                console.error('Error parsing check-in time:', e);
                                checkInTime = '';
                            }
                        }

                        const statusRaw = (registration.registrationstatus || '').trim() || null;
                        const status = statusRaw ? statusRaw.toLowerCase() : null;

                        // For past occurrences, show current status prominently
                        const statusDisplay = isPastOccurrence ? `
                    <div class="current-status-display" style="margin-bottom: 1rem; padding: 0.5rem; border-radius: 0.5rem; text-align: center; font-weight: 600; 
                        ${status === 'attended' ? 'background-color: #d4edda; color: #155724;' : ''}
                        ${status === 'no-show' ? 'background-color: #fff3cd; color: #856404;' : ''}
                        ${status === 'cancelled' ? 'background-color: #f8d7da; color: #721c24;' : ''}
                        ${!status || status === 'signed up' ? 'background-color: #e7f3ff; color: #004085;' : ''}">
                        Status: ${statusRaw || 'Signed Up'}
                    </div>
                ` : '';

                        html += `
                    <div class="participant-card" data-participant-id="${registration.participantid}" data-event-occurrence-id="${registration.eventoccurrenceid}">
                        <div class="participant-name">
                            ${registration.participantfirstname} ${registration.participantlastname}
                        </div>
                        
                        ${statusDisplay}
                        
                        <div class="check-in-section">
                            <label for="checkin-${uniqueId}">Check-In Time</label>
                            <input 
                                type="time" 
                                id="checkin-${uniqueId}"
                                class="checkin-time"
                                value="${checkInTime}"
                                data-participant-id="${registration.participantid}"
                                data-event-occurrence-id="${registration.eventoccurrenceid}">
                        </div>

                        <div class="status-section">
                            <label>Status</label>
                            <div class="status-radio-group">
                                <div class="status-radio">
                                    <input 
                                        type="radio" 
                                        id="attended-${uniqueId}"
                                        name="status-${uniqueId}"
                                        value="Attended"
                                        data-participant-id="${registration.participantid}"
                                        data-event-occurrence-id="${registration.eventoccurrenceid}"
                                        ${status === 'attended' ? 'checked' : ''}>
                                    <label for="attended-${uniqueId}">Attended</label>
                                </div>
                                <div class="status-radio">
                                    <input 
                                        type="radio" 
                                        id="noshow-${uniqueId}"
                                        name="status-${uniqueId}"
                                        value="No-Show"
                                        data-participant-id="${registration.participantid}"
                                        data-event-occurrence-id="${registration.eventoccurrenceid}"
                                        ${status === 'no-show' ? 'checked' : ''}>
                                    <label for="noshow-${uniqueId}">No-Show</label>
                                </div>
                                <div class="status-radio">
                                    <input 
                                        type="radio" 
                                        id="cancelled-${uniqueId}"
                                        name="status-${uniqueId}"
                                        value="Cancelled"
                                        data-participant-id="${registration.participantid}"
                                        data-event-occurrence-id="${registration.eventoccurrenceid}"
                                        ${status === 'cancelled' ? 'checked' : ''}>
                                    <label for="cancelled-${uniqueId}">Cancelled</label>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                    });

                    html += '</div>';
                    container.innerHTML = html;

                    // Re-attach event listeners for check-in and status updates
                    attachEventListeners();
                }

                function attachEventListeners() {
                    // Handle check-in time updates
                    document.querySelectorAll('.checkin-time').forEach(input => {
                        input.addEventListener('change', function () {
                            const participantId = this.getAttribute('data-participant-id');
                            const eventOccurrenceId = this.getAttribute('data-event-occurrence-id');
                            const timeValue = this.value;

                            if (!timeValue) {
                                return;
                            }

                            // Get today's date and combine with time
                            const today = new Date();
                            const [hours, minutes] = timeValue.split(':');
                            const checkInDateTime = new Date(today.getFullYear(), today.getMonth(), today.getDate(), parseInt(hours, 10), parseInt(minutes, 10), 0);

                            // Format as ISO string for database
                            const isoString = checkInDateTime.toISOString();

                            fetch('/api/registration/checkin', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    participantId: participantId,
                                    eventOccurrenceId: eventOccurrenceId,
                                    checkInTime: isoString
                                })
                            })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        console.log('Check-in time updated successfully');
                                    } else {
                                        console.error('Error updating check-in time:', data.error);
                                        alert('Error updating check-in time: ' + (data.error || 'Unknown error'));
                                    }
                                })
                                .catch(error => {
                                    console.error('Error:', error);
                                    alert('Error updating check-in time. Please try again.');
                                });
                        });
                    });

                    // Handle status updates
                    document.querySelectorAll('input[type="radio"][name^="status-"]').forEach(radio => {
                        radio.addEventListener('change', function () {
                            const participantId = this.getAttribute('data-participant-id');
                            const eventOccurrenceId = this.getAttribute('data-event-occurrence-id');
                            const status = this.value;

                            fetch('/api/registration/status', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    participantId: participantId,
                                    eventOccurrenceId: eventOccurrenceId,
                                    status: status
                                })
                            })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        console.log('Status updated successfully');
                                    } else {
                                        console.error('Error updating status:', data.error);
                                        alert('Error updating status: ' + (data.error || 'Unknown error'));
                                        // Revert the radio button selection
                                        this.checked = false;
                                    }
                                })
                                .catch(error => {
                                    console.error('Error:', error);
                                    alert('Error updating status. Please try again.');
                                    // Revert the radio button selection
                                    this.checked = false;
                                });
                        });
                    });
                }
            </script>
